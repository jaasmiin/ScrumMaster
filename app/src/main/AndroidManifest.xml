<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.scrummaster">

    <uses-feature android:name="com.softbank.hardware.pepper" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScrumMaster"
        tools:targetApi="31">
        <activity
            android:name=".activity.PowerPointKaraokeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ModerationDailyScrumActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ModerationPunkteActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.AuswahlmenueActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.WillkommenActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CaptureAct"
            android:screenOrientation="landscape"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />
    </application>

</manifest>